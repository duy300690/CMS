@model CMSWeb.Models.UserModel
@using CMSWeb.Language
@using (Html.BeginForm("SetRole", "User", FormMethod.Post, new { role = "form", autocomplete = "off", onsubmit = "return !1" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", (int)ViewBag.UserId)

    <div class="show_error"></div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">@UserResource.Usename</label>
        <label class="col-sm-8 col-form-label">@ViewBag.UserName</label>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">@UserResource.Role</label>
        <div class="col-sm-8">
            @Html.DropDownList("Roles", (SelectList)ViewBag.Roles, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-ok yes">@Resource.Save</button>	&nbsp;
        <button class="btn btn-secondary" data-dismiss="modal">@Resource.Cancel</button>
    </div>
}

<script type="text/javascript">    
    $("#Roles").val("@Html.Raw(ViewBag.CurrentRole)");
</script>
