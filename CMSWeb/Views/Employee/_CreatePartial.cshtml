@using CMSWeb.Language
@using CMSWeb.Util
@model CMSWeb.Models.EmployeeModel

@using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { role = "form", autocomplete = "off", onsubmit = "return !1" }))
{
    @Html.AntiForgeryToken()
    <div class="show_error"></div>

    <div class="form-group text-center">
        <div class="imagePreview"></div>       
    </div>

    <div class="form-group text-center">        
        <label class="btn btn-primary w-25 text-center">
            Upload<input type="file" class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
        </label>
    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="FirstName">@EmployeeResource.FirstName</label>
            @Html.TextBoxFor(m => m.FirstName, new
           {
               @class = "form-control",
               maxlength = 20,
               autofocus = "",
               required = ""

           })
        </div>
        <div class="form-group col-md-6">
            <label for="LastName">@EmployeeResource.LastName</label>
            @Html.TextBoxFor(m => m.LastName, new
           {
               @class = "form-control",
               maxlength = 20,
               autofocus = "",
               required = ""
           })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="IdentityCartNumber">@EmployeeResource.IdentityCode</label>
            @Html.TextBoxFor(m => m.IdentityCartNumber, new
           {
               @class = "form-control",
               maxlength = 20,
               autofocus = "",
               required = ""
           })
        </div>
        <div class="form-group col-md-6">
            <label for="Birthday">@EmployeeResource.Birthday</label>
            @Html.TextBoxFor(m => m.Birthday, new
                {
                    @class = "form-control",
                    maxlength = 20,
                    autofocus = ""
                })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Email">@UserResource.Email</label>
            @Html.TextBoxFor(m => m.Email, new
           {
               @class = "form-control",
               maxlength = 50,
               autofocus = "",
               type = "Email",
               required = ""
           })
        </div>
        <div class="form-group col-md-6">
            <label for="Phone">@EmployeeResource.Phone</label>
            @Html.TextBoxFor(m => m.Phone, new
           {
               @class = "form-control",
               maxlength = 20,
               autofocus = "",
               required = ""
           })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>@EmployeeResource.Province / @EmployeeResource.City</label>
            <input class="form-control" id="Province" name="Province" required />
        </div>
        <div class="form-group col-md-6">
            <label>@EmployeeResource.District</label>
            <input class="form-control" id="District" name="District" required />
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress2">@EmployeeResource.Address</label>
        <input type="text" class="form-control" id="Street" name="Street" required>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-ok yes">@Resource.Create</button>	&nbsp;
        <button class="btn btn-secondary" data-dismiss="modal">@Resource.Cancel</button>
    </div>
}